package ab.exercicio3;

import javax.swing.JOptionPane;

/**
 *
 * @author Caio
 */
public class Exercicio3 {

    public static void main(String[] args) {
       int n1 = 0, n2= 0, resultado = 0;
        
        String numero1 = JOptionPane.showInputDialog(null, "Numero 1: ");
        n1 = Integer.parseInt(numero1);
        
        String numero2 = JOptionPane.showInputDialog(null, "Numero 2: ");
        n2 = Integer.parseInt(numero2);
        
        if (n1 < 0 && n2 < 0 ){
            resultado = n1 + n2;
            JOptionPane.showMessageDialog(null, resultado);
        } else if (n1 > 0 && n2 > 0 ){
            resultado = n1 + n2;
            JOptionPane.showMessageDialog(null, resultado);
        } else {
             JOptionPane.showMessageDialog(null, "Dados de Entrada são Inválidos");
        }
    }
}
